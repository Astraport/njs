<?xml version="1.0"?>
<cross-domain-policy>
	<!-- 
		Default to restrictive permissions whereby only
		clients running locally can connect.
	-->
	<allow-access-from domain="localhost" to-ports="*" />
	<allow-access-from domain="127.0.0.1" to-ports="*" />
	
	<!-- Allow all domains socket access to standard http ports. -->
	<allow-access-from domain="*" to-ports="80" />
	<allow-access-from domain="*" to-ports="443" />
</cross-domain-policy>
